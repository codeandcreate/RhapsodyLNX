		#shadow_shades	    = {1.0,1.0}	   # gradient of shadows (only if reliefstyle = 3)
		#spinbuttonstyle	    = 0	   # 1 = separator on the GtkSpinButton
		textstyle	    = 0	   # 1 = draw an inset on the text (use carefully)
